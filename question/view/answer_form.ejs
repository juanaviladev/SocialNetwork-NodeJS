<%- include("../../common/view/header_main",{title: "FaceBluff - Respuesta", style: "/css/answer_form.css"})%>
    <div id="main-content">
        <h2 class="text-center"><%= question.text %></h2>
        <form action="/question/<%= question.id %>/answer" method="POST">
            <fieldset>
            <ul id="search-results">
                <% for(let i = 0; i < question.options.length; i++) {%>
                <li class="answers-list-item">
                    <label for="option-<%= i+1%>">
                        <input name="answer" id="option-<%= i+1%>" value="<%= question.options[i].id%>" type="radio">
                        <%= question.options[i].text %>
                    </label>
                </li>
                <% }%>
                <li class="selected answers-list-item">
                    <label for="custom-option">
                        <input checked name="answer" id="custom-option" value="custom-answer" type="radio">Otra:
                        <input type="text" name="custom-answer-text"  placeholder="Introduce aquÃ­ tu respuesta">
                    </label>
                </li>
            </ul>
            </fieldset>
            <div class="text-center">
                <input type="submit" value="Responder" class="text-medium purple-bt"/>
            </div>
        </form>
    
    </div>
</body>
</html>