<%- include("../../common/view/header_main",{title: "FaceBluff - Adivinar respuesta", style: "/css/answer_form.css"})%>
    <div id="main-content">
        <h2 class="text-center"><%= question.text %></h2>
        <p>¿Qué crees que opina <span class="bold"><%= friend.name %></span>?</p>
        <form action="/question/<%= question.id %>/guess" method="POST" enctype="multipart/form-data">
            <fieldset>
                <ul id="search-results">
                    <% for(let i = 0; i < question.options.length; i++) {%>
                    <li class="answers-list-item">
                        <label for="option-<%= i+1%>">
                            <input name="answer" id="option-<%= i+1%>" value="<%= question.options[i].id%>" type="radio">
                            <%= question.options[i].text %>
                        </label>
                    </li>
                    <% }%>
                </ul>
                <input hidden type="text" value="<%= friend.id %>" name="friend_id" title=""/>
            </fieldset>
            <div class="text-center">
                <input type="submit" value="Responder" class="text-medium purple-bt"/>
            </div>
        </form>
    
    </div>
</body>
</html>