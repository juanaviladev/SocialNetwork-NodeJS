<%- include("../common/header_main",{title: "FaceBluff - Búsqueda", style: "css/friends.css"})%>
    <div id="main-content">
        <h2 class="text-center">Resultados de búsqueda: '<%=word%>'</h2>
        <%if(searchResult.length){%>
            <ul class="users-list">
                <%for(elem of searchResult){%>
                    <%if(elem.status === null){%>
                        <li>
                            <div class="user-profile">
                                <img src="/prof_image/<%=elem.id%>">
                                <p><%=elem.name%></p>
                            </div>
                            <div class="friend-button">
                                <form method="post" action="friend_request">
                                    <input type="hidden" name="otherUser" value="<%=elem.id%>">
                                    <input class="purple-bt" type="submit" value="Solicitar Amistad">
                                </form>
                            </div>
                        </li>
                    <%}else if(elem.status === 0){%>
                        <li>
                            <div class="user-profile">
                                <img src="/prof_image/<%=elem.id%>">
                                <p><%=elem.name%></p>
                            </div>
                        </li>
                    <%}else if((elem.user1===currentUser && elem.status===1) ||
                            (elem.user2===currentUser && elem.status===2)){%>
                        <li>
                            <div class="user-profile">
                                <img src="/prof_image/<%=elem.id%>">
                                <p><%=elem.name%></p>
                                <p class="pendInfo">Pending</p>
                            </div>
                        </li>
                    <%}else{%>
                        <li>
                            <div class="user-profile">
                                <img src="/prof_image/<%=elem.id%>">
                                <p><%=elem.name%></p>
                            </div>
                            <div class="friend-button">
                                <form method="post" action="accept_friend">
                                    <input type="hidden" name="otherUser" value="<%=elem.id%>">
                                    <input class="purple-bt" type="submit" value="Aceptar">
                                </form>
                                <form method="post" action="reject_friend">
                                    <input type="hidden" name="otherUser" value="<%=elem.id%>">
                                    <input class="purple-bt" type="submit" value="Rechazar">
                                </form>
                            </div>
                        </li>
                    <%}%>
                <%}%>
            </ul>
        <%}%>
    </div>
</body>
</html>