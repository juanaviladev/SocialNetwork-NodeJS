<%- include("../../common/view/header_main",{title: "FaceBluff - Perfil", style: "/css/profile.css"})%>
		<div id="main-content">
			<%if(id === currentUser){%>
			<h2 class="text-center">Tu Perfil</h2>
			<%}else{%>
			<h2 class="text-center">Informacion de Perfil</h2>
			<%}%>
            <%- include("../../common/view/alerts")%>
			<div id="perfil">
				<img id="prof_img" src="/profile/<%=id%>/image">
				<div id="prof-description">
					<h3 class="text-large" id="prof-name"><%=name%></h3>
					<p><%=age%></p>
					<p><%=gender%></p>
				</div>
			</div>
			<%if(id === currentUser){%>
			<div class="modification">
				<a class="purple-bt" href="/profile/modify">Modificar Perfil</a>
				<form id="gallery_form" action="/profile/gallery" method="post" enctype="multipart/form-data">
					<div class="fields">
						<label for="image">Añadir una imagen</label>
						<input type="file" name="image" id="image">
						<textarea name="description" placeholder="Descripción de imagen" rows="5"></textarea>
					</div>
					<input class="purple-bt" type="submit" value="Añadir">
				</form>
			</div>
			<%}%>
			<%if(gallery){%>
			<div class="gallery">
				<%for(img of gallery){%>
				<figure>
					<img src="/profile/<%=img.image%>/gallery" alt="Imagen de galería">
					<figcaption><%=img.desc%></figcaption>
				</figure>
				<%}%>
			</div>
			<%}%>
		</div>
	</body>
</html>