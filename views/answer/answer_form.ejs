<%- include("../common/header_main",{title: "FaceBluff - Respuesta", style: "css/answer_form.css"})%>
    <div id="main-content">
        <h2 class="text-center">¿Nintendo Swith, PS4, o Xbox One?</h2>
        <form action="#" method="POST">
            <fieldset>
            <ul id="search-results">
                <li class="answers-list-item">
                    <label for="first-option">
                        <input name="answer" id="first-option" type="radio">
                        Nintendo Switch
                    </label>
                </li>
                <li class="answers-list-item">
                    <label for="second-option">
                        <input name="answer" id="second-option" type="radio">
                        PS4
                    </label>
                </li>
                <li class="answers-list-item">
                    <label for="third-option">
                        <input name="answer" id="third-option" type="radio">
                        Xbox One
                    </label>
                </li>
                <li class="answers-list-item">
                    <label for="forth-option">
                        <input name="answer" id="forth-option" type="radio">
                        No me interesan los videojuegos
                    </label>
                </li>
                <li class="selected answers-list-item">
                    <label for="fifth-option">
                        <input name="answer" id="fifth-option" type="radio">Otra:
                        <input type="text" placeholder="Introduce aquí tu respuesta">
                    </label>
                </li>
            </ul>
            </fieldset>
            <div class="text-center">
                <input type="submit" value="Responder" class="text-medium purple-bt"/>
            </div>
        </form>
    
    </div>
</body>
</html>